<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:qixiao="http://schemas.android.com/apk/res-auto"
              android:background="#fff"
              android:orientation="vertical"
              android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:background="@color/app_main_color"
        android:orientation="vertical"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/app_main_color"
                        android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_common_back"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="当前余额(元)"
            android:textColor="#fff799"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_now_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="50sp"
            />

        <View
            android:layout_width="324dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#28c533">

        </View>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计获的收入(元)"
                    android:textColor="#8cef93"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="39dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="累计邀请好友(个)"
                    android:textColor="#8cef93"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/tv_invite_num"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    />

            </LinearLayout>
            <View
                android:layout_centerInParent="true"
                android:background="#28c533"
                android:layout_width="1dp"
                android:layout_height="47.7dp">

            </View>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="26dp"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <com.shenqi.duokai.ui.SegmentButton
        android:id="@+id/sb_accout_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        qixiao:leftString="收入明细"
        qixiao:rightString="我的好友"
        >

    </com.shenqi.duokai.ui.SegmentButton>
    </LinearLayout>

    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>

    <TextView
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tv_withdraw_shape"
        android:id="@+id/go_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要提现"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        />
</LinearLayout>