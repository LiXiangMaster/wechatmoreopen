<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="135dp"
        android:layout_height="42dp"
        android:background="@drawable/segment_left_bg_selector"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/common_dp"
        android:paddingRight="@dimen/common_dp"
        android:paddingTop="5dp"
        android:text="X X X"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/segment_text_color_selector" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="135dp"
        android:layout_height="42dp"
        android:layout_marginLeft="-1dp"
        android:background="@drawable/segment_right_bg_selector"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/common_dp"
        android:paddingRight="@dimen/common_dp"
        android:paddingTop="5dp"
        android:text="A A A"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/segment_text_color_selector" />

</LinearLayout>