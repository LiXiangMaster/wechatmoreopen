<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
    >

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/login_success"
        />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_user_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_usename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            />

        <TextView
            android:id="@+id/tv_invite_friend_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="TA邀请了2位好友"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_mymade_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="制作1个分身"
                android:textColor="#a9a9a9"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_mymade_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+2元)"
                android:textColor="#FF7A1C"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:textColor="#a9a9a9"
                android:textSize="12sp"
                android:id="@+id/tv_friend_friend_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TA的好友制作了4个分身"/>

            <TextView
                android:id="@+id/tv_friend_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF7A1C"
                android:text="(+4元)"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>